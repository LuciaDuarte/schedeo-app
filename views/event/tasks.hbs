<nav class="navbar navbar-light">
  <a class="btn btn-light" href="/event/{{ event._id }}">Back</a>
</nav>

<div class="mt-3 mb-5">
<p class="p-tasks">Who is going to do what?</p>
<div class="table-container">
<table class="table">
  <thead>
    <tr>
      <th>Who</th>
      <th>What</th>
    </tr>
  </thead>
  <tbody>
    {{#each event.tasks}}
      <tr>
        <td>{{ assignedTo.name }}</td>
        <td>{{ description }}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

<p class="p-tasks">How can you make {{ event.name }} even better?</p>
<form action="/event/{{ event._id }}/tasks" method="POST" class="form-group form-row">
  <div class="col-6">
    <input class="form-control mb-2" type="text" name="task" placeholder="I will...">
  </div>
  <div class="col">
        <button class="btn btn-outline-dark mt-3">Make It Happen</button>
    </div>
</form>
</div>
